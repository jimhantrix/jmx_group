
 <h1> Join Us </h1>

    <%= form_tag "/users", method: :post do %>

		<div> 

		 	<%= text_field_tag: first_name, nil placeholder: "Last Name" %> 

		</div>


		<div> 

		 	<%= text_field_tag: last_name nil placeholder: "Last Name" %> 

		</div>


		<div> 

	 		<%= text_field_tag: email, nil placeholder: "Email" %> 

	 	</div>


	 	<div> 

	 		<%= password_filed_tag: password, nil placeholder: "Password" %> 

	 	</div>

    <%= submit_tag "Join" %>
    
<% end %> 




